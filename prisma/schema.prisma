generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  fullName    String
  email       String    @unique
  password    String?   // Sếp thêm dòng này vào, để dấu ? để hỗ trợ cả Google Login
  avatarUrl   String?
  role        Role      @default(USER) 
  roleTitle   String?   // Ví dụ: "Founder", "Senior Analyst"
  
  // Các quan hệ
  reports     Report[]
  feedbacks   Feedback[]
  viewLogs    ViewLog[]

  // QUAN TRỌNG: Thêm thời gian tạo để Admin sắp xếp
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  slug    String   @unique
  
  // Quan hệ đối ứng
  reports Report[]
  books   Book[]
}

model Report {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String?
  content     String?   @db.Text
  thumbnail   String?
  pdfUrl      String
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  categoryId  Int
  userId      String    
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id])
  category    Category  @relation(fields: [categoryId], references: [id])
  
  // Quan hệ đối ứng
  viewLogs    ViewLog[]
}

model Book {
  id          String    @id @default(uuid())
  title       String
  authorName  String
  description String?
  thumbnail   String?
  pdfUrl      String
  categoryId  Int
  createdAt   DateTime  @default(now())

  category    Category  @relation(fields: [categoryId], references: [id])
}

model ViewLog {
  id           String   @id @default(uuid())
  reportId     String
  userId       String?
  ipAddress    String
  guestSession String?
  createdAt    DateTime @default(now())

  report       Report   @relation(fields: [reportId], references: [id])
  user         User?    @relation(fields: [userId], references: [id])
}

model Feedback {
  id        String   @id @default(uuid())
  content   String
  rating    Int      @default(5)
  status    String   @default("PENDING")
  userId    String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
}

model AuditLog {
  id             String   @id @default(cuid())
  adminId        String
  adminName      String
  adminAvatarUrl String?  
  action         String
  target         String
  createdAt      DateTime @default(now())
}

enum Role {
  ADMIN
  CTV
  MEMBER
  USER
}